CODE_CHANGES=getGitChanges()
pipeline{
  agent any
  stages{
    stage("build image"){
      when{
        expression{
          CODE_CHANGES=true
        }
      }
      steps{
        docker build -t library-management-api ./api/. 
        echo "image built successfully"
      }     
    }
    stage("push image to ACR"){
      steps{
        echo "pushing to ACR stage"
      }
    }
  }
}